{
    "name": "joshgaber/novaunit",
    "description": "Unit testing suite for Laravel Nova, built to extend PHPUnit",
    "version": "1.0.1",
    "keywords": [
        "laravel",
        "nova",
        "joshgaber",
        "novaunit"
    ],
    "homepage": "https://github.com/joshgaber/novaunit",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Josh Gaber",
            "email": "joshgaber@gmail.com",
            "homepage": "https://joshgaber.ca",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-mbstring": "*",
        "cakephp/chronos": ">=1.2.3",
        "illuminate/support": ">=6.0",
        "laravel/nova": ">=2.0",
        "phpunit/phpunit": ">=8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.2"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "JoshGaber\\NovaUnit\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JoshGaber\\NovaUnit\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "lint": "vendor/bin/php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    }
}
